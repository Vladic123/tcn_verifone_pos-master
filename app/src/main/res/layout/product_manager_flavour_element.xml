<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:focusable="false"
    android:descendantFocusability="blocksDescendants"
    >


    <ImageView
        android:id="@+id/product_manager_flavour_element_delete_button"
        android:layout_width="56dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:focusableInTouchMode="true"
        android:text="@string/product_manager_flavour_element_delete_text"
        android:textSize="32sp"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/product_manager_flavour_element_image"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_dialog" />

    <ImageView
        android:id="@+id/product_manager_flavour_element_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/product_manager_flavour_element_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_manager_flavour_element_image" />


</androidx.constraintlayout.widget.ConstraintLayout>