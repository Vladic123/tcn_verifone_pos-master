<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/color_element_id_text"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/blank"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/color_element_color"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/small_margin"
        app:layout_constraintStart_toEndOf="@+id/color_element_id_text"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/color_element_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/small_margin"
        android:text="@string/color_element_edit_button"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/color_element_color"
        app:layout_constraintStart_toEndOf="@+id/color_element_color" />

    <Button
        android:id="@+id/color_element_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/small_margin"
        android:text="@string/color_element_delete_button"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/color_element_edit_button"
        app:layout_constraintStart_toEndOf="@+id/color_element_edit_button" />

</androidx.constraintlayout.widget.ConstraintLayout>