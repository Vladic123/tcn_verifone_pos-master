<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="80dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="450dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="180dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/outerframe"
            android:layout_width="1000dp"
            android:layout_height="1400dp"
            android:layout_marginStart="20dp"
            android:background="@color/transparent"
            app:cardCornerRadius="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pink_card_thick_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/headerText">

                        <TextView
                            android:id="@+id/headerText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="2dp"
                            android:fontFamily="@font/poppinsregular"
                            android:gravity="center"
                            android:text="Want to Receive Discounts on \n Every Purchase?"
                            android:textColor="@color/black"
                            android:textSize="40sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@color/lightestGray"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <androidx.cardview.widget.CardView
                            android:id="@+id/step1card"
                            android:layout_width="420dp"
                            android:layout_height="448dp"
                            android:layout_margin="@dimen/big_margin"
                            app:cardCornerRadius="50dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/headerText">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/white" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/innerFrame"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/standard_margin"
                                    app:cardCornerRadius="20dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">


                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/darkPink" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                                <ImageView
                                                    android:layout_width="300dp"
                                                    android:layout_height="300dp"
                                                    android:layout_gravity="center"
                                                    android:elevation="2dp"
                                                    android:src="@drawable/qrcodebluebig" />

                                                <ImageView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="120dp"
                                                    android:elevation="2dp"
                                                    android:src="@drawable/poggeeguy"

                                                    />
                                        </LinearLayout>
                                </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>


                        <ImageView
                            android:id="@+id/secondImage"
                            android:layout_width="420dp"
                            android:layout_height="448dp"
                            android:layout_margin="@dimen/big_margin"
                            android:src="@drawable/white_card_background"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/headerText"
                            app:srcCompat="@drawable/qrscanthree" />


                        <TextView
                            android:id="@+id/rightText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/big_margin"
                            android:fontFamily="@font/poppinssemibold"
                            android:gravity="center"
                            android:text="Place your phone on\nthe scanner"
                            android:textColor="@color/black"
                            android:textSize="35sp"
                            app:layout_constraintEnd_toEndOf="@id/secondImage"
                            app:layout_constraintStart_toStartOf="@id/secondImage"
                            app:layout_constraintTop_toBottomOf="@id/secondImage" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinssemibold"
                            android:gravity="center"
                            android:text="Receive discounts on every purchase"
                            android:textColor="@color/ui_base_text_gray"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toEndOf="@id/secondImage"
                            app:layout_constraintStart_toStartOf="@id/secondImage"
                            app:layout_constraintTop_toBottomOf="@id/rightText" />


                        <TextView
                            android:id="@+id/leftText1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="@dimen/big_margin"
                            android:fontFamily="@font/poppinssemibold"
                            android:gravity="center"
                            android:text="Register by scanning\nthis QR Code"
                            android:textColor="@color/black"
                            android:textSize="35sp"
                            app:layout_constraintEnd_toEndOf="@+id/step1card"
                            app:layout_constraintStart_toStartOf="@+id/step1card"
                            app:layout_constraintTop_toBottomOf="@+id/step1card" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinssemibold"
                            android:gravity="center"
                            android:text="Or go to www.poggee.com/checkin"
                            android:textColor="@color/ui_base_text_gray"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toEndOf="@id/step1card"
                            app:layout_constraintStart_toStartOf="@id/step1card"
                            app:layout_constraintTop_toBottomOf="@id/leftText1" />

                </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:elevation="0dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="@id/guideline6"
            app:layout_constraintEnd_toEndOf="@id/guideline5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textSize="30sp"
                    />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:elevation="0dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="@id/guideline6"
            app:layout_constraintEnd_toEndOf="@id/guideline7">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:fontFamily="@font/poppinssemibold"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textSize="30sp"
                    />

        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>