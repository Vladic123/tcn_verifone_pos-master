<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/product_manager_product_list_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_manager_product_list_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blank"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/product_manager_product_list_image"
        app:layout_constraintTop_toBottomOf="@+id/product_manager_product_list_name" />

    <TextView
        android:id="@+id/product_manager_product_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blank"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/product_manager_product_list_image"
        app:layout_constraintTop_toBottomOf="@+id/product_manager_product_list_description" />

    <TextView
        android:id="@+id/product_manager_product_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blank"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/product_manager_product_list_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/product_manager_product_list_delete"
        android:layout_width="112dp"
        android:layout_height="76dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/product_manager_product_list_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/product_manager_product_list_image"
        app:srcCompat="@android:drawable/btn_dialog" />


</androidx.constraintlayout.widget.ConstraintLayout>