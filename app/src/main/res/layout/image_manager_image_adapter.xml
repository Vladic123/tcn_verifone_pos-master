<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_manager_adapter_main_image"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginStart="160dp"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="600dp"
        android:layout_height="200dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="@id/image_manager_adapter_main_image"
        app:layout_constraintEnd_toEndOf="@id/image_manager_adapter_main_image"
        app:layout_constraintStart_toStartOf="@id/image_manager_adapter_main_image">

        <ImageView
            android:id="@+id/image_manager_adapter_bg_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/image_manager_adapter_delete_button"
        android:layout_width="112dp"
        android:layout_height="76dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_manager_adapter_main_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_manager_adapter_main_image"
        app:srcCompat="@android:drawable/btn_dialog" />
</androidx.constraintlayout.widget.ConstraintLayout>