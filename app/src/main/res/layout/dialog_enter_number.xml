                app:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:textSize="80dp"
                android:text="8" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/enter_number_9"
            android:stateListAnimator="@animator/lift_on_touch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:layout_columnWeight="1">

            <TextView
                android:id="@+id/enter_number_9_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/standard_margin"
                android:paddingEnd="@dimen/standard_margin"
                android:paddingTop="30dp"
                android:gravity="center_horizontal|bottom"
                android:background="@drawable/button_lighter_gray_background"
                app:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:textSize="80dp"
                android:text="9" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/enter_number_clear"
            android:stateListAnimator="@animator/lift_on_touch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginBottom="@dimen/standard_margin"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:layout_columnWeight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/standard_margin"
                android:paddingEnd="@dimen/standard_margin"
                android:paddingTop="52dp"
                android:paddingBottom="36dp"
                android:gravity="center_horizontal|bottom"
                android:background="@drawable/button_lighter_gray_background"
                app:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:text="Clear" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/enter_number_0"
            android:stateListAnimator="@animator/lift_on_touch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginBottom="@dimen/standard_margin"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:layout_columnWeight="1">

            <TextView
                android:id="@+id/enter_number_0_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/standard_margin"
                android:paddingEnd="@dimen/standard_margin"
                android:paddingTop="20dp"
                android:gravity="center_horizontal|bottom"
                android:background="@drawable/button_lighter_gray_background"
                app:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:textSize="80dp"
                android:text="0" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/enter_number_confirm"
            android:stateListAnimator="@animator/lift_on_touch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginBottom="@dimen/standard_margin"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:layout_columnWeight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/standard_margin"
                android:paddingEnd="@dimen/standard_margin"
                android:paddingTop="52dp"
                android:paddingBottom="36dp"
                android:gravity="center_horizontal|bottom"
                android:background="@drawable/button_lighter_gray_background"
                app:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:text="Confirm" />
        </androidx.cardview.widget.CardView>
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>