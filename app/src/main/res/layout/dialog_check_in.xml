<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_small_inset_background">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="130dp"
        app:fontFamily="@font/poppinssemibold"
        android:textColor="@color/textMainColor"
        android:textSize="70sp"
        android:gravity="center_horizontal"
        android:text="Check in to always"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fontFamily="@font/poppinssemibold"
        android:textColor="@color/textSecondaryColor"
        android:textSize="40sp"
        android:text="receive discounts off purchases"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <ImageView
        android:id="@+id/step_one_badge"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginStart="60dp"
        android:adjustViewBounds="true"
        android:elevation="8dp"
        app:srcCompat="@drawable/pink_circle_background"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/step_one_numer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:textSize="80dp"
        android:gravity="center"
        android:text="1"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@id/step_one_badge"
        app:layout_constraintStart_toStartOf="@id/step_one_badge"
        app:layout_constraintEnd_toEndOf="@id/step_one_badge"
        app:layout_constraintBottom_toBottomOf="@id/step_one_badge"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/step_one_two"
        android:layout_width="540dp"
        android:layout_height="700dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toTopOf="@id/step_one_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/step_one_badge">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pink_card_thick_background">

            <ImageView
                android:id="@+id/qr_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="60dp"
                android:adjustViewBounds="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/image_32x3_borderless" />

            <ImageView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/qr_icon"
                app:layout_constraintStart_toStartOf="@id/qr_icon"
                app:srcCompat="@drawable/poggeeguybig" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/step_one_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:fontFamily="@font/poppinssemibold"
        android:textColor="@color/textMainColor"
        android:textSize="45sp"
        android:gravity="center_horizontal"
        android:text="@string/register_text_2"
        app:layout_constraintTop_toBottomOf="@id/step_one_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/step_one_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/big_margin"
        app:fontFamily="@font/poppinssemibold"
        android:textColor="@color/textTertiaryColor"
        android:textSize="30sp"
        android:text="@string/subtitle_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step_one_title"/>

    <ImageView
        android:id="@+id/step_two_badge"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginStart="60dp"
        android:adjustViewBounds="true"
        android:elevation="8dp"
        app:srcCompat="@drawable/green_circle_background"
        app:layout_constraintTop_toBottomOf="@id/step_one_subtitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/step_two_numer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:fontFamily="@font/poppinssemibold"
        android:textColor="@color/white"
        android:textSize="80dp"
        android:gravity="center"
        android:text="2"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@id/step_two_badge"
        app:layout_constraintStart_toStartOf="@id/step_two_badge"
        app:layout_constraintEnd_toEndOf="@id/step_two_badge"
        app:layout_constraintBottom_toBottomOf="@id/step_two_badge"/>

    <ImageView
        android:id="@+id/step_two_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/qrscantwo"
        app:layout_constraintBottom_toBottomOf="@id/step_two_two"
        app:layout_constraintTop_toTopOf="@id/step_two_badge"
        app:layout_constraintStart_toEndOf="@id/step_two_badge"
        app:layout_constraintEnd_toStartOf="@id/step_two_two"/>

    <ImageView
        android:id="@+id/step_two_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="120dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/qrscanthree"
        app:layout_constraintTop_toTopOf="@id/step_two_badge"
        app:layout_constraintStart_toEndOf="@id/step_two_one"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/step_two_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginBottom="40dp"
        app:fontFamily="@font/poppinssemibold"
        android:textColor="@color/textMainColor"
        android:textSize="45sp"
        android:gravity="center_horizontal"
        android:text="Place your phone on the scanner"
        app:layout_constraintTop_toBottomOf="@id/step_two_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>